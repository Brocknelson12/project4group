	private void addActorFrame(JFrame frame){
		frame = new JFrame("Add Actor");
		
		JPanel jplEnter = new JPanel(new GridLayout(12, 0, 5, 5));
		
		JButton noButton = new JButton("CANCEL");
		noButton.setActionCommand("actor");
