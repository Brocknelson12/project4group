	private class SaveFilesListener implements ActionListener{
		@Override
		public void actionPerformed(ActionEvent e){
			//TODO Ouput Object I/O files
		}
	}
	
	private class CancelListener implements ActionListener{
		@Override
		public void actionPerformed(ActionEvent e){
			if(e.getActionCommand().equals("movie")) frameList.get(0).dispose();
			if(e.getActionCommand().equals("series")) frameList.get(1).dispose();
			if(e.getActionCommand().equals("episode")) frameList.get(2).dispose();
			if(e.getActionCommand().equals("actor")) frameList.get(3).dispose();
			if(e.getActionCommand().equals("director")) frameList.get(4).dispose();
			if(e.getActionCommand().equals("producer")) frameList.get(5).dispose();
		}
	}
	
	private class AddDataListener implements ActionListener{
		@Override
		public void actionPerformed(ActionEvent e){
			int i = 0;
			for(JRadioButton b : buttonList){
				if(b.isSelected()){
					if(i >= 5){
						frameList.get(i - 2).setVisible(true);
					}
					else{
						frameList.get(i - 1).setVisible(true);
					}
				}
				i++;
			}
		}
	}
	
	private class EditDataListener implements ActionListener{
		@Override
		public void actionPerformed(ActionEvent e){
			selectedIndex = objectList.getSelectedIndex();
			if(selectedIndex < 0){
				JOptionPane.showMessageDialog(null, "Select one Object in outputArea before edit.");
				return;
			}
			//TODO 
			for(int i = 0; i < buttonList.size(); i++){
				if(buttonList.get(i).isSelected()){
					if(i == 1){
						selectedMovie = (Movie) objectList.getSelectedValue();
						movieEditorTitleField.setText(selectedMovie.getName());
						movieEditorYearField.setText(selectedMovie.getYear());
						ronNumEditorField.setText("Really dont know");
						venueEditorField.setText("what?");
						editorFrameList.get(i - 1).setVisible(true);
						
						break;
					}
					else if(i == 2){
						selectedSeries = (TVSeries) objectList.getSelectedValue();
						seriesEditorTitleField.setText(selectedSeries.getName());
						seriesEditorStartYearField.setText(selectedSeries.getYear());
						seriesEditorEndYearField.setText(selectedSeries.getEndYear());
						editorFrameList.get(i - 1).setVisible(true);
					}
					else if(i == 3){
						selectedEpisode = (Episode) objectList.getSelectedValue();
						episodeEditorSeriesTitleField.setText(selectedEpisode.series.getName());
						episodeEditorStartYearField.setText(selectedEpisode.getYear());
						episodeEditorEndYearField.setText(selectedEpisode.getEndYear());
						episodeEditorTitleField.setText(selectedEpisode.getName());
						episodeEditorNumField.setText(selectedEpisode.episodeNumber);
						editorFrameList.get(i - 1).setVisible(true);
						break;
					}
					else if( i == 5) {
						selectedCreator = (Creator) objectList.getSelectedValue();
						actorEditorNameField.setText(selectedCreator.getName());
						actorEditorTitleField.setText(selectedCreator.getTitle());
						actorEditorYearField.setText(selectedCreator.getYear());
						actorEditorEpisodeTitleField.setText(selectedCreator.getEpisodeTitle());
						actorEditorEpisodeNumberField.setText(selectedCreator.getEpisodeNumber());
						actorEditorTypeField.setText(selectedCreator.getType());
						actorEditorRoleField.setText(selectedCreator.getRole());
						actorEditorArchiveFootageField.setText(selectedCreator.getArchiveFootage());
						actorEditorCreditField.setText(selectedCreator.getCredit());
						actorEditorCharNameField.setText(selectedCreator.getCharName());
						actorEditorBillingOrderField.setText(selectedCreator.getBillingOrder());
						editorFrameList.get(i - 2).setVisible(true);
						break;
					}
					else if(i == 6){
						selectedCreator = (Creator) objectList.getSelectedValue();
						directorEditorNameField.setText(selectedCreator.getName());
						directorEditorTitleField.setText(selectedCreator.getTitle());
						directorEditorYearField.setText(selectedCreator.getYear());
						directorEditorEpisodeTitleField.setText(selectedCreator.getEpisodeTitle());
						directorEditorEpisodeNumberField.setText(selectedCreator.getEpisodeNumber());
						directorEditorTypeField.setText(selectedCreator.getType());
						directorEditorCreditField.setText(selectedCreator.getCredit());
						editorFrameList.get(i - 2).setVisible(true);
						break;
					}
					else if(i == 7){
						selectedCreator = (Creator) objectList.getSelectedValue();
						producerEditorNameField.setText(selectedCreator.getName());
						producerEditorTitleField.setText(selectedCreator.getTitle());
						producerEditorYearField.setText(selectedCreator.getYear());
						producerEditorEpisodeTitleField.setText(selectedCreator.getEpisodeTitle());
						producerEditorEpisodeNumberField.setText(selectedCreator.getEpisodeNumber());
						producerEditorTypeField.setText(selectedCreator.getType());
						producerEditorCreditField.setText(selectedCreator.getCredit());
						producerEditorRoleField.setText(selectedCreator.getRole());
						editorFrameList.get(i - 2).setVisible(true);
						break;
					}
				}
			}
		}
	}
	
	
	private class SelectListener implements ActionListener{
		@Override
		public void actionPerformed(ActionEvent event) {
			String title = "";
			selectString = "";
			int i = 0;
		
			for(JRadioButton b : buttonList){
				if(b.isSelected()){
					title = title + b.getActionCommand() + ", ";
					i++;
				}
			}
			if(title.contains(",")) title = title.substring(0, title.length() - 2);
			if(i == 0) title = "Output Titile";
			outputLabel.setText(title);
			
			if((!mediaButton.isSelected() && !makersButton.isSelected()) && i > 0){
				add.setEnabled(true);

			}
			else{
				add.setEnabled(false);
			}
			if(mediaButton.isSelected() || makersButton.isSelected()) edit.setEnabled(false);
			
			
	
		}
	}
	
